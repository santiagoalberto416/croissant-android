<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentChronometer"
    android:layout_below="@+id/titleAskQuestion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.croissant.croissant.GoAndShowAskQuestion">

    <com.croissant.croissant.ReverseChronometer
        android:layout_below="@id/scrollAskQuestion"
        android:id="@+id/chrono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="50sp"
        android:textColor="@color/backgroundColor"
        android:textStyle="bold"/>

</RelativeLayout>